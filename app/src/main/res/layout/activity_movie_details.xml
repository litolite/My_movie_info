<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_theme_background_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/movie_details_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription">

        <ImageView
            android:id="@+id/header_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avengers" />

        <ImageView
            android:id="@+id/mask_imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mask" />

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="59dp"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical16"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_path" />

        <TextView
            android:id="@+id/back_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/roboto300"
            android:text="@string/back_string"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/backIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pg_textView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="52dp"
            android:alpha="0.9"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/roboto900"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/pg"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical16" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto900"
            android:gravity="center_vertical"
            android:lineSpacingExtra="0sp"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="6"
            android:shadowRadius="12"
            android:text="@string/avengers_end_game"
            android:textColor="@color/ececec"
            android:textSize="40sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical16"
            app:layout_constraintTop_toBottomOf="@id/pg_textView"
            app:lineHeight="40sp" />

        <TextView
            android:id="@+id/tagTextView"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tags"
            android:textAlignment="textStart"
            android:textColor="@color/tags"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical16"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/rating_star"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/tagTextView"
            app:srcCompat="@drawable/filled_star_24"
            app:tint="@color/filled_star" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/rating_star"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/tagTextView"
            app:srcCompat="@drawable/baseline_star_24"
            app:tint="@color/fade" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/rating_star"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/tagTextView"
            app:srcCompat="@drawable/filled_star_24"
            app:tint="@color/filled_star" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/rating_star"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical16"
            app:layout_constraintTop_toBottomOf="@+id/tagTextView"
            app:srcCompat="@drawable/filled_star_24"
            app:tint="@color/filled_star" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/rating_star"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/tagTextView"
            app:srcCompat="@drawable/filled_star_24"
            app:tint="@color/filled_star" />

        <TextView
            android:id="@+id/countReviews_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:text="@string/reviews"
            android:textColor="@color/fade"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tagTextView" />

        <TextView
            android:id="@+id/storyline_name_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/stroryline_name"
            android:textColor="@color/ececec"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countReviews_textView" />

        <TextView
            android:id="@+id/storyline_text_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="@string/storyline_text"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storyline_name_textView" />

        <TextView
            android:id="@+id/casts_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="341dp"
            android:text="@string/casts"
            android:textAlignment="textStart"
            android:textColor="@color/ececec"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storyline_text_textView" />

        <ImageView
            android:id="@+id/actor_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/actor_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/casts_textView"
            app:srcCompat="@drawable/downey"
            tools:srcCompat="@drawable/downey" />

        <ImageView
            android:id="@+id/actor_imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/actor_name2"
            app:layout_constraintStart_toEndOf="@+id/actor_imageView"
            app:layout_constraintTop_toTopOf="@+id/actor_imageView"
            app:srcCompat="@drawable/evans"
            tools:srcCompat="@drawable/evans" />

        <ImageView
            android:id="@+id/actor_imageView3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/actor_name3"
            app:layout_constraintStart_toEndOf="@+id/actor_imageView2"
            app:layout_constraintTop_toTopOf="@+id/actor_imageView"
            app:srcCompat="@drawable/ruffalo"
            tools:srcCompat="@drawable/ruffalo" />

        <ImageView
            android:id="@+id/actor_imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/actor_name4"
            app:layout_constraintStart_toEndOf="@+id/actor_imageView3"
            app:layout_constraintTop_toTopOf="@+id/actor_imageView"
            app:srcCompat="@drawable/hemsworth"
            tools:srcCompat="@drawable/hemsworth" />

        <TextView
            android:id="@+id/actorName_textView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="@string/actor_name"
            android:textAlignment="textStart"
            android:textColor="@color/d8d8d8"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actor_imageView" />

        <TextView
            android:id="@+id/actorName_textView2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/actor_name2"
            android:textAlignment="textStart"
            android:textColor="@color/d8d8d8"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/actorName_textView"
            app:layout_constraintTop_toTopOf="@+id/actorName_textView" />

        <TextView
            android:id="@+id/actorName_textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/actor_name3"
            android:textAlignment="textStart"
            android:textColor="@color/d8d8d8"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/actorName_textView2"
            app:layout_constraintTop_toTopOf="@+id/actorName_textView" />

        <TextView
            android:id="@+id/actorName_textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/actor_name4"
            android:textAlignment="textStart"
            android:textColor="@color/d8d8d8"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/actorName_textView3"
            app:layout_constraintTop_toTopOf="@+id/actorName_textView" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="298dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
